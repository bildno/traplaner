        <!--        FROM tbl_travel_board B-->
        <!--        LEFT JOIN tbl_reply R-->
        <!--        ON B.board_no = R.board_no-->
        <include refid="search" />
        GROUP BY B.id
        ORDER BY id DESC
        LIMIT #{pageStart}, #{amount}
    </select>

    <select id="findOne" resultType="travelboard">
        SELECT * FROM tbl_travel_board
        WHERE id = #{id}
    </select>

    <!-- 총 게시물을 구하는 메서드도 SearchDTO를 전달받아야 한다. -->
